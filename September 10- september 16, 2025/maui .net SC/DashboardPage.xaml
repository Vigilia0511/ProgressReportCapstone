<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="testdatabase.DashboardPage"
             Title="Dashboard">

	<VerticalStackLayout Padding="20" Spacing="15">
		<Label Text="Welcome to the Dashboard!" FontSize="24" HorizontalOptions="Center" />

		<Label Text="Choose Authentication Method:" FontSize="18" HorizontalOptions="Center" />

		<Button Text="Face" Clicked="OnFaceClicked" />
		<Button Text="Fingerprint" Clicked="OnFingerprintClicked" />
		<Button Text="PIN" Clicked="OnPinClicked" />
		<Button Text="Voice" Clicked="OnVoiceClicked" />
	</VerticalStackLayout>

</ContentPage>
